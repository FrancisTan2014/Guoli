@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "标准化验收-详情";
    ViewBag.LastPage = "标准化验收列表";
    ViewBag.LastUrl = "/Instructor/Accept";
    ViewBag.ThisPage = "标准化验收详情";
    ViewBag.ThisUrl = "/Instructor/AcceptDetail?id=" + ViewBag.Id;
}

<form class="form-horizontal bg-white p-10" role="form">

    <input type="hidden" name="target" value="ViewInstructorAccept" />

    <div class="form-group">
        <label class="col-sm-2 control-label">验收日期：</label>
        <div class="col-sm-10">
            <label class="control-label text-left" name="AcceptDate"></label>
        </div>
    </div>

    <hr class="line-dashed line-full">

    <div class="form-group">
        <label class="col-sm-2 control-label">验收人：</label>
        <div class="col-sm-10">
            <label class="control-label text-left" name="Name"></label>
        </div>
    </div>

    <hr class="line-dashed line-full">

    <div class="form-group">
        <label class="col-sm-2 control-label">司机：</label>
        <div class="col-sm-10">
            <label class="control-label text-left" name="DriverName"></label>
        </div>
    </div>

    <hr class="line-dashed line-full">

    <div class="form-group">
        <label class="col-sm-2 control-label">司机得分：</label>
        <div class="col-sm-10">
            <label class="control-label text-left" name="DriverScore"></label>
        </div>
    </div>

    <hr class="line-dashed line-full">

    <div class="form-group">
        <label class="col-sm-2 control-label">副司机：</label>
        <div class="col-sm-10">
            <label class="control-label text-left" name="ViceDriverName"></label>
        </div>
    </div>

    <hr class="line-dashed line-full">

    <div class="form-group">
        <label class="col-sm-2 control-label">副司机得分：</label>
        <div class="col-sm-10">
            <label class="control-label text-left" name="ViceDriverScore"></label>
        </div>
    </div>

    <hr class="line-dashed line-full">

    <div class="form-group">
        <label class="col-sm-2 control-label">主要问题：</label>
        <div class="col-sm-10">
            <label class="control-label text-left" name="Problems"></label>
        </div>
    </div>

    <hr class="line-dashed line-full">

    <div class="form-group">
        <label class="col-sm-2 control-label">指导意见：</label>
        <div class="col-sm-10">
            <label class="control-label text-left" name="Suggests"></label>
        </div>
    </div>

    <hr class="line-dashed line-full">
    
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-2">
            <a href="/Instructor/Accept" class="btn btn-lg btn-primary" id="btnBack">返 回</a>
        </div>
    </div>
</form>

<script src="/Scripts/page-scripts/instructor-detail.js"></script>