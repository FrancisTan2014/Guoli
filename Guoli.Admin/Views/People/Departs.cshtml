@{
    ViewBag.Title = "部门列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.LastPage = "部门人员";
    ViewBag.LastUrl = "javascript:void(0);";
    ViewBag.ThisPage = "部门管理";
    ViewBag.ThisUrl = "/People/Departs";
}

<link href="/Scripts/plugins/bootstrap-treeview/bootstrap-treeview.min.css" rel="stylesheet"/>

<div class="row">
    <div class="mb-10">
        <div class="btn btn-default" id="btnExpandAll">全部展开</div>
        <div class="btn btn-default" id="btnCollapseAll">全部折叠</div>
    </div>
    <div id="treeView">

    </div>
</div>

<form id="departEdit" style="display: none;">
    <div class=" form-group" style="overflow: hidden;">
    <label class="col-sm-4 control-label text-right">上级单位：</label>
    <label class="col-sm-8 control-label" id="parentName">上级单位</label>
    </div>
    <div class="form-group" style="overflow: hidden;">
        <label class="col-sm-4 control-label text-right">部门名称：</label>
        <div class="col-sm-8">
            <input type="hidden" name="ParentId" />
            <input type="text" class="form-control" name="DepartmentName" placeholder="在此输入部门名称" required data-parsley-required-message="部门名称不能为空" data-parsley-maxlength="20" data-parsley-maxlength-message="部门名称不能起过二十个字">
        </div>
    </div>
</form>

<script src="/Scripts/plugins/bootstrap-treeview/bootstrap-treeview.js"></script>
<script src="/Scripts/page-scripts/departs.js"></script>